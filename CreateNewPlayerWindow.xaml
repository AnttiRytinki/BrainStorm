<Window x:Class="BrainStorm.CreateNewPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainStorm"
        mc:Ignorable="d"
        Title="Create New Player" Height="220" Width="300">
    <Grid>
        <StackPanel Margin="50,50,0,0">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="nameLabel" Content="Name: " Height="25"/>
                <TextBox x:Name="nameTextBox" TextWrapping="Wrap" Text="" Width="120" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"/>
        </StackPanel>

        <Button x:Name="button" Content="OK" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="50" Height="30" Click="OK_button_Click"/>

    </Grid>
</Window>
